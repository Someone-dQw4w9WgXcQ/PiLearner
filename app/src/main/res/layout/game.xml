<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PiLearner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:layout_editor_absoluteY="400dp">
    <TextView
        android:id="@+id/EnteredPiLabel"
        android:layout_width="351dp"
        android:layout_height="190dp"
        android:layout_marginTop="53dp"
        android:textAlignment="viewEnd"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3.14"
        />

    <TableLayout
        android:id="@+id/tblNumpad"
        android:layout_width="360dp"
        android:layout_height="338dp"
        android:layout_marginBottom="20dp"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <Button
                android:id="@+id/btnNumpad1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="1"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNumpad2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNumpad3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="3"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0">

            <Button
                android:id="@+id/btnNumpad4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="4"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNumpad5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="5"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNumpad6"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="6"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0">

            <Button
                android:id="@+id/btnNumpad7"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="7"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNumpad8"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="8"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNumpad9"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="9"
                android:textSize="40sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="0">

            <Button
                android:id="@+id/btnNumpad0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="0"
                android:textSize="40sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/DigitCount"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnteredPiLabel"
        tools:text="69" />
</androidx.constraintlayout.widget.ConstraintLayout>